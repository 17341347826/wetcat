
.pay_text {
	display: block;
	width: 100%;
	height: 76rpx;
	font-size: 30rpx;
	line-height: 76rpx;
	color: #4B4B4B;
	text-align: right;
	padding: 1px;
	margin-top: 20rpx;
}
.pay_title {
	float: left;
	margin-left: 20rpx;
}
.li_shen {
	color: #FFFFFF;
	background-color: #ff4200;
	font-size: 22rpx;
	padding: 5rpx 30rpx;
	margin-left: 20rpx;
	border-radius: 50rpx;
}
.old_price {
	text-decoration: line-through;
	font-size: 18rpx;
}
.price {
	color: #FF4200;
	font-size: 34rpx;
	font-family: Hiragino Sans GB;
	font-weight: bold;
	margin: 0 20rpx;
}
.active {
	border: 1px solid #ff4200;
	padding: 0px;
	background-color: #fadacf;
}
.pat_btn {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	background-image: -webkit-gradient(linear, left top, right top, from(#db2322), to(#fe9000));
	background-image: -o-linear-gradient(left, #db2322, #fe9000);
	background-image: linear-gradient(to right, #db2322, #fe9000);
	border-radius: 80rpx;
	margin-top: 20rpx;
}

